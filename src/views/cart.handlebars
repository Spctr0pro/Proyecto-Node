<header>
    <h1 class="title">{{title}}</h1>
</header>
<main>
    <section>
        <div class="container">
            <table class="tabla-carrito">
                <thead>
                    <tr>
                        <th></th>
                        <th>Producto</th>
                        <th>Categor√≠a</th>
                        <th>Cantidad</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data.products}}
                    <tr key={{this.productId._id}}>
                        
                        <td><img src="/api/public/images/{{this.productId.thumbnails}}" alt="Imagen Producto" width="50px"
